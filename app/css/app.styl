body
  font-size 14px
.flickr-galley
  .toolbar
    margin  3rem 0 2rem
  .card
    display table
    padding 1rem
    min-height  290px
    width 100%
    .wrap-content
      display table-cell
      vertical-align  middle
    .picture
      display inline-block
      padding 0 1rem
      width 50%
      height  200px
      img
        width 100%
        height  100%
        cursor pointer
    .favorite
      color #ad1457
      font-size 25px
      position absolute
      right 10px
      top 10px

    .tags
      display inline-block
      font-size 12px
      margin 0
      max-height 260px;
      overflow-y: scroll;
      padding 2rem 1rem
      width 48%
      vertical-align middle
      li
        background-color #eee
        border-radius 6px
        cursor  pointer
        padding 0.5rem
        text-transform uppercase
        margin-bottom 0.5rem
        a
          color #fff
          text-decoration none
          word-break  break-word
